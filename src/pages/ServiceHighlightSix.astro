---
import Layout from '../layouts/Layout.astro';
import SEO from '../components/SEO.astro';
import LocationHero from '../components/LocationHero.astro';
import Footer from '../components/Footer.astro'
import '@fontsource-variable/oswald';
import LocationSection from '../components/LocationSection.astro';
import ServiceList from '../components/ServiceList.astro';
import ServiceHighlightHero from '../components/ServiceHighlightHero.astro';
import Promises from '../components/Promises.astro';
---

<Layout>
  <SEO 
    slot="head"
    title="Residential and Commercial HVAC in Port Richey, FL | Farrell Air Conditioning"
    description="Farrell Air Conditioning's proudly serves both homes and businesses in Port Richey with expert heating, cooling, and indoor air quality solutions tailored to your space and your needs."
    canonical="https://farrellac.com/"
    ogImage="/images/FAC.png"
    City="Port Richey"
    State="FL"
    services={["Residential HVAC", "Commercial HVAC"]}
  />

  <ServiceHighlightHero
    HeroTitle="Residential and Commercial HVAC"
    HeroTitleTwo="Trusted by Homeowners and Businesses in Port Richey, FL"
  />

  <Promises/>

  <LocationSection 
    HeaderOne="Comfort You Can Count On at Home"
    City="Port Richey"
    State="FL"
    ParaOne="From your first cup of coffee in the morning to winding down at night, your home’s comfort matters. We help homeowners in Port Richey stay cool in the summer and warm in the winter with reliable HVAC repairs, installations, and maintenance. Whether it's a quick fix or a full system upgrade, we treat your home like it’s our own."

    HeaderTwo="Reliable HVAC Solutions for Local Businesses"
    ParaTwo="When your business depends on comfort, climate control is not optional. We work with restaurants, offices, retail spaces, and more to keep their systems running smoothly and their spaces welcoming. Our team is trained to handle the demands of commercial equipment while staying flexible to your business hours and needs. We get in, get it done, and keep your operation moving forward."
  />


  <Footer/>
</Layout>