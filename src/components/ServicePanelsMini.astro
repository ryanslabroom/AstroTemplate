---
import { Image } from 'astro:assets';
import AcRepairIcon from "../assets/acicon.png"
import AcRepairInverse from "../assets/aciconwhite.png"
import Placeholder from "../assets/fullrange.jpeg"
const{ServicesTitle, ServicesDescription, inLocation, inLocationAgain} = Astro.props
---
<div class="grid grid-cols-1 md:grid-cols-2 gap-8 px-4 md:px-20 mx-auto my-10 r">
<section>
  <h3 class="flex justify-center text-center font-semibold text-5xl mb-4 text-[#08439d]">{ServicesTitle}</h3>
  <p class="flex justify-center font-medium text-center text-xl mb-6">
    {ServicesDescription}
  </p>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 max-w-xl mx-auto">
    <!-- Panel 1 -->
    <article class="bg-white p-4 rounded-lg shadow-md hover:shadow-xl transition duration-500 hover:bg-[#08439d] hover-child h-[200px] card flex flex-col justify-center">
      <div class="flex justify-center items-center">
        <Image src={AcRepairInverse} alt="AC repair icon inverse" class="w-20 whiteicon"/>
        <Image src={AcRepairIcon} alt="AC repair icon" class="w-20 hover-img" loading="eager"/>
      </div>
      <h3 class="text-lg font-semibold text-gray-800 text-center mt-2">
        <a href="/ServiceHighlightOne" class="hover:underline">AC Repair & Installation</a>
      </h3>
      <p class="text-gray-600 text-sm text-center">Fast, professional air conditioning services {inLocationAgain}.</p>
    </article>

    <!-- Panel 2 -->
    <article class="bg-white p-4 rounded-lg shadow-md hover:shadow-xl transition duration-500 hover:bg-[#08439d] hover-child h-[200px] card flex flex-col justify-center">
      <div class="flex justify-center items-center">
        <Image src={AcRepairInverse} alt="Furnace icon inverse" class="w-20 whiteicon" loading="lazy"/>
        <Image src={AcRepairIcon} alt="Furnace icon" class="w-20 hover-img" loading="eager"/>
      </div>
      <h3 class="text-lg font-semibold text-gray-800 text-center mt-2">
        <a href="/ServiceHighlightTwo" class="hover:underline">Furnace & Heater Services</a>
      </h3>
      <p class="text-gray-600 text-sm text-center">Expert heating system repairs and replacements {inLocation}.</p>
    </article>

    <!-- Panel 3 -->
    <article class="bg-white p-4 rounded-lg shadow-md hover:shadow-xl transition duration-500 hover:bg-[#08439d] hover-child h-[200px] card flex flex-col justify-center">
      <div class="flex justify-center items-center">
        <Image src={AcRepairInverse} alt="Air quality icon inverse" class="w-20 whiteicon" loading="lazy"/>
        <Image src={AcRepairIcon} alt="Air quality icon" class="w-20 hover-img" loading="eager"/>
      </div>
      <h3 class="text-lg font-semibold text-gray-800 text-center mt-2">
        <a href="/ServiceHighlightThree" class="hover:underline">Indoor Air Quality</a>
      </h3>
      <p class="text-gray-600 text-sm text-center">Improve air filtration and reduce allergens {inLocation}.</p>
    </article>

    <!-- Panel 4 -->
    <article class="bg-white p-4 rounded-lg shadow-md hover:shadow-xl transition duration-500 hover:bg-[#08439d] hover-child h-[200px] card flex flex-col justify-center">
      <div class="flex justify-center items-center">
        <Image src={AcRepairInverse} alt="Maintenance icon inverse" class="w-20 whiteicon" loading="lazy"/>
        <Image src={AcRepairIcon} alt="Maintenance icon" class="w-20 hover-img" loading="eager"/>
      </div>
      <h3 class="text-lg font-semibold text-gray-800 text-center mt-2">
        <a href="/ServiceHighlightFour" class="hover:underline">HVAC Maintenance</a>
      </h3>
      <p class="text-gray-600 text-sm text-center">Prevent costly repairs with routine maintenance {inLocationAgain}.</p>
    </article>
  </div>

  <a class="text-white justify-center align-center text-lg sm:text-xl font-semibold w-full sm:w-2/3 md:w-1/3 mt-8 flex items-center gap-x-1 mx-auto bg-[#08439d] hover:bg-[#08439d] hover:cursor-pointer h-12 rounded-lg">
    Call Now: 111-222-3333
  </a>
 
</section>
 <Image 
            src={Placeholder} 
            alt="AC Unit" 
            class="w-full h-80 md:h-96 object-cover rounded-2xl my-auto"
          />
</div>

<style>
  .hover-child:hover > * {
    color: white;
  }

  .hover-child:hover .hover-img {
    display: none;
  }

  .hover-child:hover .whiteicon {
    display: block;
  }

  .whiteicon {
    display: none;
  }

  .card {
    box-shadow: rgba(0, 0, 0, 0.2) 0px 4px 8px;
  }
</style>
