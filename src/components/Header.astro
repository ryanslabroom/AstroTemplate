---
import { Image } from 'astro:assets';

import mainLogo from "../assets/logoipsum-296.svg"
import Calender from "../assets/calendar.png"
import Phone from "../assets/phoneicon.png"
import Hamburger from './Hamburger.astro';
import HamburgerMenu from './HamburgerMenu.astro';
import "../styles/global.css";
---
<header>
<div class="flex flex-col w-full">

  <!-- Schedule online, Call Icon + number -->
  <div class="flex flex-row items-center w-full 
  xl:justify-end lg:justify-end md:justify-center sm:justify-center justify-center 
  gap-x-4 bg-[#007dfc] text-white text-2xl min-h-16  
  pr-0 sm:pr-0 md:pr0 lg:pr-32"> 

  <div class="flex flex-row items-center">
  <a class="text-md md:text-md lg:text-xl flex items-center pr-1 pl-1 gap-x-1 bg-[#E63946] hover:bg-[#C1272D] hover:cursor-pointer h-12 rounded-lg"><Image src={Calender} alt="Schedule Icon" width="53"/>Schedule Online</a>
  </div>
  <a class="text-md md:text-md hover:cursor-pointer flex items-center pr-1 pl-1 bg-[#0056b3] hover:bg-[#004494] rounded-lg h-12 lg:text-2xl"><Image src={Phone} alt="Phone Icon" width="54"/>111-222-3333</a>
</div>
<!-- Schedule online, Call Icon + number -->

<!-- Logo, Page Anchors -->
<div class="flex flex-row justify-between md:justify-between pr:0 lg:pr-32 lg:justify-between items-center w-full bg-[#FAFAFA] px-4 md:px-8 lg:px-64">

  <!-- Logo -->
  <div class="flex justify-center md:justify-center lg:justify-start w-14 md:14 lg:14 pt-5 pb-5">
    <Image src={mainLogo} height=50 width="200" alt="Company Logo"/>
  </div>

  <!-- Hamburger Menu -->
  <div class="flex justify-center md:justify-center lg:justify-end">
    <Hamburger />
  </div>
  
  <!-- Navigation -->
   <nav class="hidden lg:flex gap-12 md:gap-8 text-sm md:text-md lg:text-lg font-medium">
  <ul class="hidden lg:flex gap-12 md:gap-8 text-sm md:text-md lg:text-lg font-medium">
  <li class="hover:text-[#007dfc] hover:cursor-pointer">Home</li>
  <li class="hover:text-[#007dfc] hover:cursor-pointer">Locations</li>
  <li class="hover:text-[#007dfc] hover:cursor-pointer">Services</li>
  <li class="hover:text-[#007dfc] hover:cursor-pointer">Meet The Team</li>
  <li class="hover:text-[#007dfc] hover:cursor-pointer">Blog</li>
  </ul>
   </nav>

</div>
<nav>
  <div class="nav-links hidden ">
    <HamburgerMenu/>
  </div>
</nav>
<div class="nav-links">

</div>
</header>
<script>
  // Import your menu JavaScript
  import "../scripts/menu.js";
  // hidden md:hidden  
</script>
