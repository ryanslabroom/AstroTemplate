---
import { Image } from 'astro:assets';
import Placeholder from "../assets/placeholder.webp"
const { Location } = Astro.props
---

<section class="flex flex-col md:flex-row my-10 px-6 md:px-16 justify-around gap-10 items-center bg-[#007dfc] text-white">
  <div class="w-full md:w-1/2">
    <Image src={Placeholder} alt="Placeholder" class="w-full h-64 sm:h-80 md:h-96 object-cover rounded-md" />
  </div>
  
  <div class="w-full md:w-1/2 text-center md:text-left">
    <p class="text-4xl sm:text-5xl md:text-6xl font-semibold mb-10 leading-tight">WORK WITH THE PROFESSIONALS</p>
    <ul class="grid grid-cols-1 sm:grid-cols-2 gap-x-8 gap-y-6 text-xl sm:text-2xl  mb-10">
      <li>Same-Day Service</li>
      <li>Free Estimates</li>
      <li>Customer Satisfaction Guaranteed</li>
      <li>Workmanship Quality</li>
    </ul>
  </div>
</section>

