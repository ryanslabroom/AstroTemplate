---
export interface Props {
  title: string;
  description: string;
  keywords?: string;
  canonical?: string;
  ogImage?: string;
  url?: string;
  extraSchema?: any; // optional additional schema for specific pages
  City?: string | string[];
  State?: string;
  services?: string[];
}

const {
  title,
  description,
  keywords,
  canonical,
  ogImage = "https://www.ryanshvac.com/og-default.jpg",
  url = canonical,
  extraSchema,
  City,
  State,
  services
} = Astro.props;

// Normalize City to always be an array
const cityList = Array.isArray(City) ? City : City ? [City] : [];

// Generate areaServed array
const areaServed = (cityList.length && State)
  ? cityList.map(city => ({
      "@type": "Place",
      "name": `${city}, ${State}`
    }))
  : undefined;

// Generate makesOffer array if services exist
const makesOffer = services?.map(service => ({
  "@type": "Offer",
  "itemOffered": {
    "@type": "Service",
    "name": service
  }
}));

// HVACBusiness Schema
const businessSchema = {
  "@context": "https://schema.org",
  "@type": "HVACBusiness",
  "name": "Farrell Air Conditioning",
  "image": "https://www.ryanshvac.com/images/logo.png",
  "url": url,
  "telephone": "+1-727-327-7355",
  "priceRange": "$$",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "6840 Commerce Ave",
    "addressLocality": "Port Richey",
    "addressRegion": "FL",
    "postalCode": "34668",
    "addressCountry": "US"
  },
  ...(areaServed && { areaServed }),
  ...(makesOffer && { makesOffer }),
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 28.2794,
    "longitude": -82.7011
  },
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      "opens": "08:00",
      "closes": "17:00"
    }
  ],
  "sameAs": [
    "https://www.facebook.com/Farrellair/"
  ],
  "description": description
};

// Merge optional extra schema
const fullSchema = extraSchema ? [businessSchema, extraSchema] : businessSchema;
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content={description} />
  {keywords && <meta name="keywords" content={keywords} />}
  <meta name="author" content="Ryan's HVAC Solutions" />
  <meta name="generator" content={Astro.generator} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  {canonical && <link rel="canonical" href={canonical} />}

  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImage} />
  {url && <meta property="og:url" content={url} />}
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content="Ryan's HVAC" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImage} />

  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json">
    {JSON.stringify(fullSchema)}
  </script>

  <title>{title}</title>
</head>
