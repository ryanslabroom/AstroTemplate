---
const { HeaderOne, ParaOne, HeaderTwo, ParaTwo, ParaThree, ParaFour, Placeholder} = Astro.props
import { Image } from 'astro:assets';

---
 
<div class="grid grid-cols-1 md:grid-cols-2 gap-8 px-4 md:px-20 mx-auto my-10">

  <!-- Text Content in Column 1 -->
  <section class="order-1">
    <section class="mb-10">
      <h2 class="text-4xl text-[#007dfc] text-center  font-semibold">{HeaderOne}</h2>
      <p class="mt-5 text-2xl font-sans text-center">{ParaOne}</p>

      <h2 class="text-4xl text-[#007dfc] text-center  font-semibold mt-10">{HeaderTwo}</h2>
      <p class="mt-5 text-2xl font-sans text-center">{ParaTwo}</p>
      <p class="mt-5 text-2xl font-sans text-center">{ParaThree}</p>
      <p class="mt-5 text-2xl font-sans text-center">{ParaFour}</p>
    </section>
  </section>

  <!-- Right Column: Image + Contact Heading + Form -->
  <div class="order-2 flex flex-col items-center space-y-6 ">
    <!-- Image -->
    <Image 
      src={Placeholder} 
      alt="AC Unit" 
      class="w-full h-80 md:h-96 object-cover rounded-b-2xl"
    />

    <!-- Contact Header -->
    <h3 class="text-4xl md:text-5xl font-semibold text-[#007dfc] text-center">Contact Us Today</h3>

    <!-- Form -->
    <form class="w-full md:w-[90%] lg:w-[75%] bg-[#007dfc] rounded-lg text-white px-6 py-4">
      <p class="text-2xl md:text-3xl font-bold text-center mt-2 mb-5">Fill out this form and we'll reach out.</p>

      <div class="grid grid-cols-1 gap-6">
        <!-- Full Name -->
        <label class="block">
          <span class="text-white text-xl md:text-2xl">Full Name</span>
          <input
            type="text"
            required
            class="mt-1 block w-full rounded-md bg-white text-black border-none focus:ring-2 focus:ring-white focus:outline-none text-xl py-1 px-1"
            placeholder="Jane Doe"
          />
        </label>

        <!-- Phone Number -->
        <label class="block">
          <span class="text-white text-xl md:text-2xl">Phone Number</span>
          <input
            type="tel"
            required
            class="mt-1 block w-full rounded-md bg-white text-black border-none focus:ring-2 focus:ring-white focus:outline-none text-xl py-1 px-1"
            placeholder="(123) 456-7890"
          />
        </label>

        <!-- Email Address -->
        <label class="block">
          <span class="text-white text-xl md:text-2xl">Email Address</span>
          <input
            type="email"
            required
            class="mt-1 block w-full rounded-md bg-white text-black border-none focus:ring-2 focus:ring-white focus:outline-none text-xl py-1 px-1"
            placeholder="jane@example.com"
          />
        </label>

        <!-- Description -->
        <label class="block">
          <span class="text-white text-xl md:text-2xl">Tell us more about what you need</span>
          <textarea
            class="mt-1 block w-full rounded-md bg-white text-black border-none focus:ring-2 focus:ring-white focus:outline-none text-xl py-1 px-1"
            rows="4"
            placeholder="Let us know how we can help..."
          ></textarea>
        </label>

        <!-- Submit Button -->
        <button
          type="submit"
          class="mt-6 mb-2 bg-white text-[#007dfc] font-bold py-3 rounded-md text-xl hover:bg-gray-100 transition">
          Submit
        </button>
      </div>
    </form>
  </div>
</div>